<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root type="HBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
         alignment="TOP_LEFT" spacing="10">
    <children>
        <ImageView fx:id="displayPicture" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true"/>
        <Label fx:id="dialog" wrapText="true" maxWidth="320">
            <padding><Insets top="8" right="12" bottom="8" left="12"/></padding>
            <style>
                -fx-background-color: #f1f1f1; -fx-background-radius: 12;
            </style>
        </Label>
    </children>
</fx:root>


